<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_popular"
    app:startDestination="@id/nav_popular"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/nav_popular"
        android:name="com.xtremepixel.moviemvvm.popular.presentation.MovieListFragment"
        android:label="@string/popular_movies"
        tools:layout="@layout/fragment_movie_list">

        <action
            android:id="@+id/navigateToMovieDetails"
            app:destination="@id/nav_movie_detail"/>

    </fragment>

    <fragment
        android:id="@+id/nav_movie_detail"
        android:name="com.xtremepixel.moviemvvm.details.presentation.MovieDetailsFragment">

        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>

</navigation>